@model IEnumerable<EPasport.Models.MaintenanceWorks>
@{
    ViewData["Title"] = "Регламентные работы";
}
<!doctype html>
<div class="bg-secondary text-white">
    <h3 class="px-4">Регламентные работы</h3>
        <table class="table mb-5 text-white">
            <tr>
                <th></th>
                <th scope="col">Наименование регламентной работы</th>
                <th scope="col">Дата и время выполнения регламентной работы</th>
                <th scope="col">ФИО сервисного инженера</th>
                <th scope="col">Стоимость работы (Уе.)</th>
            </tr>
        @foreach (var objcet in Model)
        {
            <tr>
                <td><a class="btn btn-danger" href="\Home\RemoveMaintenanceWorks?MaintenanceWorksId=@objcet.MaintenanceWorksId&Name=@objcet.Name&Time=@objcet.Time&NameEngineer=@objcet.NameEngineer&Price=@objcet.Price&TechObjectId=@objcet.TechObjectId" role="button">Удалить</a></td>
                <td>@objcet.Name</td>
                <td>@objcet.Time</td>
                <td>@objcet.NameEngineer</td>
                <td>@objcet.Price</td>
            </tr>
        }
        </table>
</div>
<hr />
<div class="bg-light p-2">
<h3 class="px-4 mb-2">Добавить регламентные работы</h3>
<form method="post">
    <div class="d-grid gap-3">
    <div class="row gy-1">
        <div class="col-3">
            <label for="inputEmail4">Наименование регламентной работы</label>
            <input type="text" class="form-control" placeholder="Наименование регламентной работы" name="Name">
        </div>
        <div class="col-4">
            <label for="inputEmail4">Дата и время выполнения регламентной работы</label>
            <input type="datetime-local" class="form-control" name="Time">
        </div>
        <div class="col-3">
            <label for="inputEmail4">ФИО сервисного инженера</label>
            <input type="text" class="form-control" placeholder="ФИО сервисного инженера" name="NameEngineer">
        </div>
        <div class="col-2">
            <label for="inputEmail4">Стоимость работы (Уе.)</label>
            <input type="number" class="form-control" placeholder="Стоимость работы" name="Price">
        </div>
        <input type="hidden" name="TechObjectId" value="@ViewBag.TechObjectId" />
    </div>
    <button type="submit" class="btn btn-success">Добавить</button>
    </div>
</form>
</div>
